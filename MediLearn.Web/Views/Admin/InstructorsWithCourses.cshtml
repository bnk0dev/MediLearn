@using Medilearn.Models.DTOs
@model List<InstructorWithCoursesDto>

@{
    Layout = "_LayoutAdmin";
    var name = ViewBag.AdminName as string ?? "Admin";
}

<h2 class="text-danger text-center my-4">Eğitmenler ve Kursları</h2>

<table class="table table-bordered table-hover align-middle text-center" style="width: 100%;">
    <thead class="table-danger text-white">
        <tr>
            <th>Eğitmen Adı</th>
            <th>Kurs Başlığı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            if (instructor.Courses.Any())
            {
                foreach (var course in instructor.Courses)
                {
                    <tr>
                        <td>@instructor.FullName</td>
                        <td class="text-start ps-4">@course.Title</td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditCourse" asp-route-id="@course.Id" class="btn btn-sm btn-outline-danger me-2">
                                <i class="fa fa-edit"></i> Düzenle
                            </a>
                            <a asp-controller="Admin" asp-action="DeleteCourse" asp-route-id="@course.Id" class="btn btn-sm btn-outline-secondary"
                               onclick="return confirm('Bu kursu silmek istediğinize emin misiniz?');">
                                <i class="fa fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>@instructor.FullName</td>
                    <td colspan="2" class="text-muted fst-italic">Henüz kurs oluşturulmamış.</td>
                </tr>
            }
        }
    </tbody>
</table>
