@model List<Medilearn.Data.Entities.User>
@{
    Layout = "_LayoutAdmin";
    var name = ViewBag.AdminName as string ?? "Admin";
}

<div class="container d-flex justify-content-center">
    <div class="w-100" style="max-width: 1400px;">

        <h2 class="text-danger text-center my-4">Kayıtlı Kullanıcılar</h2>

        <table class="table custom-table table-bordered align-middle text-center shadow-sm mx-auto">
            <thead class="table-danger text-white">
                <tr style="font-weight: 600;">
                    <th class="wide-col">TC Kimlik No</th>
                    <th class="wide-col">Ad</th>
                    <th class="wide-col">Soyad</th>
                    <th class="wide-col">Email</th>
                    <th class="wide-col">Rol</th>
                    <th class="wide-col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr style="height: 75px;">
                        <td>@user.TCNo</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-danger text-white">@user.Role.ToString()</span>
                        </td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.TCNo" class="btn btn-outline-danger btn-sm me-2">
                                <i class="fa fa-edit"></i> Düzenle
                            </a>
                            <a asp-action="DeleteUser" asp-route-id="@user.TCNo" class="btn btn-outline-secondary btn-sm"
                               onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                <i class="fa fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
