@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sağlık Bakanlığı Personel Eğitim Sistemi</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo-title">
                <img src="~/img/logo.png" alt="Logo" class="logo" style="height:30px; width:30px" />
