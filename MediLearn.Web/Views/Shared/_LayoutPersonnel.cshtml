@using System.Security.Claims
@using System.Globalization
@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var firstName = claimsIdentity?.FindFirst("FirstName")?.Value ?? "";
    var lastName = claimsIdentity?.FindFirst("LastName")?.Value ?? "";
    var fullName = $"{firstName} {lastName}".Trim();
    if (string.IsNullOrEmpty(fullName))
    {
        fullName = User.Identity.Name; // fallback olarak TCNo veya username
    }
    var profileImage = claimsIdentity?.FindFirst("ProfileImage")?.Value ?? "/uploads/profiles/default.png";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Personel Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Stil dosyaları -->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Üst navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Sol Logo -->
        <a class="navbar-brand ps-3" href="#">Personel Paneli</a>

        <!-- Sidebar aç/kapa -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sağ üst kullanıcı ve dil seçimi -->
        <ul class="navbar-nav ms-auto me-3 align-items-center">
            <li class="nav-item d-flex align-items-center me-3">
                <img src="@profileImage" alt="Kullanıcı" class="rounded-circle" style="width:32px; height:32px; object-fit:cover; border: 1px solid #fff;" />
                <span class="text-white ms-2">@fullName</span>
            </li>
            <form id="cultureForm" asp-controller="Culture" asp-action="SetCulture" method="post" class="d-inline">
                <select name="culture" onchange="this.form.submit()" class="form-select form-select-sm bg-dark text-white border-0">
                    <option value="tr" selected="@((CultureInfo.CurrentUICulture.Name == "tr").ToString().ToLower())">TR</option>
                    <option value="en" selected="@((CultureInfo.CurrentUICulture.Name == "en").ToString().ToLower())">EN</option>
                    <option value="fr" selected="@((CultureInfo.CurrentUICulture.Name == "fr").ToString().ToLower())">FR</option>
                </select>
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
            </form>



        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Menü</div>

                        <a class="nav-link" asp-controller="Personnel" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Anasayfa
                        </a>
                        <a class="nav-link" asp-controller="Personnel" asp-action="Courses">
                            <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                            Kursları Keşfet
                        </a>
                        <a class="nav-link" asp-controller="Personnel" asp-action="Profile">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Profil
                        </a>
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                            Çıkış Yap
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Rol:</div>
                    Personel
                </div>
            </nav>
        </div>

        <!-- İçerik -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Personel Modülü © Sağlık Bakanlığı 2025</div>
                        <div>
                            <a href="#">Gizlilik</a>
                            &middot;
                            <a href="#">Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
