<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Personel Paneli - Sağlık Eğitim</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js" defer></script>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo-title">
                <img src="~/img/logo.png" alt="Logo" class="logo" />
                <span>Personel Paneli</span>
            </div>
            <div class="auth-links">
                <a href="/Account/Logout">Çıkış</a>
            </div>
        </div>

        <div class="sidebar">
            <button id="sidebarToggle" class="sidebar-toggle">&#9776;</button>
            <nav >                        <a asp-controller="Personnel" asp-action="Index">
                        <img src="~/img/home.png" alt="Anasayfa" class="sidebar-icon" style="height:30px;width:30px" />
                            <span>Anasayfa</span>
                        </a>
                 
                        <a asp-controller="Personnel" asp-action="Courses">
                        <img src="~/img/course.png" alt="Kurslar" class="sidebar-icon" style="height:30px;width:30px" />
                            <span>Kurslar</span>
                        </a>
     
                        <a asp-controller="Personnel" asp-action="RegisteredCourses">
                        <img src="~/img/newCourse.png" alt="Kayıtlı Kurslar" class="sidebar-icon" style="height:30px;width:30px" />
                            <span>Kayıtlı Kurslar</span>
                        </a>
                
                        <a asp-controller="Personnel" asp-action="Profile">
                        <img src="~/img/profile.png" alt="Profil" class="sidebar-icon" style="height:30px;width:30px"/>
                            <span>Profil</span>
                        </a>
                        <a asp-controller="Account" asp-action="Logout">
                            <img src="~/img/logout.png" alt="çikiş yap" class="sidebar-icon" style="height:30px;width:30px" />
                            <span>Çıkış Yap</span>
                        </a>
  
            </nav>

        </div>
        <div class="content">
            @RenderBody()
        </div>

        <div class="footer">
            Eğitmen Modülü © Sağlık Bakanlığı
        </div>
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>