@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Admin Paneli - Sağlık Eğitim</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/styles.css" rel="stylesheet" /> <!-- SB Admin CSS -->
    <link href="~/css/site.css" rel="stylesheet" />   <!-- Özel sağlık bakanlığı teması -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" defer></script>
</head>
<body class="sb-nav-fixed">

    <!-- ÜST NAVBAR -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Sol Logo ve Başlık -->
        <a class="navbar-brand ps-3" href="#">Admin Paneli</a>

        <!-- Sidebar Aç/Kapat Butonu -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sağ boşluk (Profil ikonu kaldırıldı) -->
        <div class="ms-auto me-4"></div>
    </nav>

    <!-- ANA GÖVDE -->
    <div id="layoutSidenav">
        <!-- SOL SİDEBAR -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Admin Menüsü</div>

                        <a class="nav-link" asp-action="InstructorsWithCourses" asp-controller="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                            Kurslar
                        </a>

                        <a class="nav-link" asp-action="Statistics" asp-controller="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            İstatistikler
                        </a>

                        <a class="nav-link" asp-action="Users" asp-controller="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Kayıtlı Kullanıcılar
                        </a>

                        <a class="nav-link" asp-controller="Account" asp-action="Logout">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                            Çıkış Yap
                        </a>
                    </div>
                </div>

                <div class="sb-sidenav-footer">
                    <div class="small">Giriş Yapan:</div>
                    Admin
                </div>
            </nav>
        </div>

        <!-- SAYFA İÇERİĞİ -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Admin Modülü © Sağlık Bakanlığı 2025</div>
                        <div>
                            <a href="#">Gizlilik</a>
                            &middot;
                            <a href="#">Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
