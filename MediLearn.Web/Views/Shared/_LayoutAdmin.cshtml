@using System.Security.Claims

@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var firstName = claimsIdentity?.FindFirst("FirstName")?.Value ?? "";
    var lastName = claimsIdentity?.FindFirst("LastName")?.Value ?? "";
    var fullName = $"{firstName} {lastName}".Trim();
    if (string.IsNullOrEmpty(fullName))
    {
        fullName = User.Identity.Name; // Fallback (örneğin TCNo)
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Admin Paneli - Sağlık Eğitim</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/styles.css" rel="stylesheet" /> <!-- SB Admin CSS -->
    <link href="~/css/site.css" rel="stylesheet" />   <!-- Özel sağlık bakanlığı teması -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" defer></script>
</head>
<body class="sb-nav-fixed">

    <!-- ÜST NAVBAR -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="#">Admin Paneli</a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <ul class="navbar-nav ms-auto me-3 align-items-center">
            <li class="nav-item d-flex align-items-center me-3">
                <img src="~/img/user-profile.png" alt="Kullanıcı" class="rounded-circle" style="width:32px; height:32px; object-fit:cover; border: 1px solid #fff;" />
                <span class="text-white ms-2">@fullName</span>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Dil: TR
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                    <li><a class="dropdown-item" href="?culture=tr">Türkçe (TR)</a></li>
                    <li><a class="dropdown-item" href="?culture=en">English (EN)</a></li>
                    <li><a class="dropdown-item" href="?culture=fr">Français (FR)</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- ANA GÖVDE -->
    <div id="layoutSidenav">
        <!-- SOL SİDEBAR -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Admin Menüsü</div>

                        <a class="nav-link" asp-action="InstructorsWithCourses" asp-controller="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                            Kurslar
                        </a>

                        <a class="nav-link" asp-action="Statistics" asp-controller="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            İstatistikler
                        </a>

                        <a class="nav-link" asp-action="Users" asp-controller="Admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Kayıtlı Kullanıcılar
                        </a>

                        <a class="nav-link" asp-controller="Account" asp-action="Logout">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                            Çıkış Yap
                        </a>
                    </div>
                </div>

                <div class="sb-sidenav-footer">
                    <div class="small">Giriş Yapan:</div>
                    @fullName
                </div>
            </nav>
        </div>

        <!-- SAYFA İÇERİĞİ -->
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Admin Modülü © Sağlık Bakanlığı 2025</div>
                        <div>
                            <a href="#">Gizlilik</a>
                            &middot;
                            <a href="#">Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
