@model Medilearn.Models.ViewModels.CoursesViewModel
@{
    Layout = "_LayoutPersonnel";
    ViewBag.Title = "Kurslar";
}

<h2>Kurslar</h2>

<div class="courses-container">
    @foreach (var course in Model.AllCourses)
    {
        <div class="course-card">
            <h3>@course.Title</h3>
            <p>@course.Description</p>
            <p><strong>Başlangıç:</strong> @course.StartDate.ToString("yyyy-MM-dd")</p>
            <p><strong>Bitiş:</strong> @course.EndDate.ToString("yyyy-MM-dd")</p>

            @if (DateTime.Now > course.EndDate)
            {
                <button disabled class="btn btn-secondary">Kayıt Süresi Doldu</button>
            }
            else
            {
                <form asp-action="Enroll" method="post">
                    <input type="hidden" name="courseId" value="@course.Id" />
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </form>
            }
        </div>
    }
</div>

<style>
    .courses-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .course-card {
        border: 1px solid #a10000;
        border-radius: 8px;
        padding: 1rem;
        width: 300px;
        background-color: #fff0f0;
    }

    .btn-primary {
        background-color: #a10000;
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #7a0000;
        }

    .btn-secondary {
        background-color: #ccc;
        border: none;
        color: #666;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: not-allowed;
    }
</style>
