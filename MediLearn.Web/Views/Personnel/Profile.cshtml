@model Medilearn.Models.ViewModels.ProfileDto
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Layout = "_LayoutPersonnel"; // veya uygun layout
    ViewBag.Title = Localizer["MyProfileTitle"];
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        <h2 class="text-center mb-4 text-danger">@Localizer["MyProfileTitle"]</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center">
                @ViewBag.Message
            </div>
        }

        <form asp-action="Profile" method="post">
            <div class="mb-3">
                <label asp-for="TCNo" class="form-label">@Localizer["TCNo"]</label>
                <input asp-for="TCNo" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
                <input asp-for="FirstName" class="form-control" placeholder="@Localizer["EnterFirstName"]" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">@Localizer["LastName"]</label>
                <input asp-for="LastName" class="form-control" placeholder="@Localizer["EnterLastName"]" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="@Localizer["EnterEmail"]" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100">@Localizer["Update"]</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="UpdateProfileImage" class="btn btn-outline-primary">@Localizer["UpdateProfileImage"]</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
