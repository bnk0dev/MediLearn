@model Medilearn.Models.DTOs.ProfileImageDto
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Layout = "_LayoutPersonnel";
    ViewBag.Title = Localizer["UpdateProfileImageTitle"];
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
        <h2 class="text-center mb-4 text-danger">@Localizer["UpdateProfileImageHeading"]</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        <form asp-action="UpdateProfileImage" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <input asp-for="TCNo" type="hidden" />

            <div class="mb-3">
                <label asp-for="ProfileImage" class="form-label">@Localizer["SelectNewProfileImage"]</label>
                <input asp-for="ProfileImage" type="file" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100">@Localizer["UpdateButton"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
