@model List<Medilearn.Models.DTOs.CourseDto>
@{
    Layout = "_LayoutPersonnel";
    ViewBag.Title = "Kayıtlı Kurslarım";
}

<h2 class="text-center my-4">Kayıtlı Kurslarım</h2>

@if (!Model.Any())
{
    <div class="text-center alert alert-warning">Henüz herhangi bir kursa kayıtlı değilsiniz.</div>
}
else
{
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">
            @foreach (var course in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100 shadow-sm border-danger border-1">
                        <!-- Kart içeriği -->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="fw-bold text-danger">@course.Title</h5>
                                <p class="text-muted">@course.Description</p>
                                <p><strong>Başlangıç:</strong> @course.StartDate.ToString("yyyy-MM-dd")</p>
                                <p><strong>Bitiş:</strong> @course.EndDate.ToString("yyyy-MM-dd")</p>

                                @if (!string.IsNullOrEmpty(course.MaterialFileName))
                                {
                                    <p>
                                        <a href="@course.MaterialFileName" target="_blank" class="btn btn-sm btn-outline-secondary">
                                            Materyali Görüntüle
                                        </a>
                                    </p>
                                }
                            </div>
                        </div>

                        <!-- Başla Butonu -->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a href="@Url.Action("CourseDetails", "Personnel", new { id = course.Id })" class="btn btn-outline-danger w-100">
                                    Başla
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
