@model IEnumerable<Medilearn.Models.DTOs.CourseMaterialDto>

@{
    ViewData["Title"] = "Kurs Materyalleri";
    int courseId = ViewBag.CourseId ?? 0;
}

<h2>Kurs Materyalleri</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Dosya</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>
                    <a href="@material.FilePath" target="_blank">
                        @System.IO.Path.GetFileName(material.FilePath)
                    </a>
                </td>
                <td>
                    <!-- Eğer isterseniz buraya materyal silme vb. işlemler ekleyebilirsiniz -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-action="UploadMaterial" asp-route-courseId="@courseId">Yeni Materyal Yükle</a>
<a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
