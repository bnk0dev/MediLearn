@model Medilearn.Models.DTOs.CourseDto
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["AddCoursePageTitle"];
    Layout = "_LayoutInstructor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center fs-4 fw-bold">
                    <i class="bi bi-journal-plus"></i> @Localizer["AddCourseHeading"]
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddCourse" method="post" novalidate>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">@Localizer["CourseTitle"]</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">@Localizer["Description"]</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="StartDate" class="form-label fw-semibold">@Localizer["StartDate"]</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="EndDate" class="form-label fw-semibold">@Localizer["EndDate"]</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-plus-circle"></i> @Localizer["CreateCourseButton"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
