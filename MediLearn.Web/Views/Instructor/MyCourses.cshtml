@model List<Medilearn.Models.DTOs.CourseDto>
@{
    ViewData["Title"] = "Kurslarım";
    Layout = "_LayoutInstructor";
}

<h2>Kurslarım</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Kurs Başlığı</th>
            <th>Açıklama</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Materyal Ekle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.StartDate.ToShortDateString()</td>
                <td>@course.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="AddMaterial" asp-route-courseId="@course.Id" class="btn btn-success">Materyal Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
