@model Medilearn.Models.DTOs.ProfileImageDto
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Layout = "_LayoutInstructor";
    ViewBag.Title = Localizer["UpdateProfileImageTitle"];
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 mx-auto border-danger" style="max-width: 500px;">
        <h2 class="text-center mb-4 text-danger fw-bold">
            <i class="bi bi-image"></i> @Localizer["UpdateProfileImageHeading"]
        </h2>

        <div class="text-center mb-3">
            <img src="@ViewBag.CurrentImagePath" alt="Profil Resmi" id="currentProfileImage" class="rounded-circle border" style="width: 120px; height: 120px; object-fit: cover;" />
        </div>

        <form id="imageUploadForm" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="TCNo" value="@Model.TCNo" />

            <div class="mb-3">
                <label asp-for="ProfileImage" class="form-label fw-semibold">@Localizer["SelectNewProfileImage"]</label>
                <input asp-for="ProfileImage" type="file" class="form-control" name="ProfileImage" />
                <span asp-validation-for="ProfileImage" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100 fw-bold">
                <i class="bi bi-upload"></i> @Localizer["UpdateButton"]
            </button>
        </form>

        <div id="uploadMessage" class="mt-3"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#imageUploadForm").submit(function (e) {
            e.preventDefault();

            var formData = new FormData(this);

            $.ajax({
                url: '@Url.Action("UpdateProfileImage", "Instructor")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (res) {
                    if (res.success) {
                        // Sayfadaki profil resmini güncelle
                        $("#currentProfileImage").attr("src", res.imagePath + '?v=' + new Date().getTime());

                        // Layouttaki profil resmini güncelle
                        $("#layoutProfileImage").attr("src", res.imagePath + '?v=' + new Date().getTime());

                        $("#uploadMessage").html('<div class="alert alert-success">Profil fotoğrafı başarıyla güncellendi.</div>');
                    } else {
                        $("#uploadMessage").html('<div class="alert alert-danger">' + res.message + '</div>');
                    }
                },
                error: function () {
                    $("#uploadMessage").html('<div class="alert alert-danger">Beklenmeyen bir hata oluştu.</div>');
                }
            });
        });
    </script>
}
