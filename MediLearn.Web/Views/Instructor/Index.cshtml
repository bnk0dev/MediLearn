@model List<Medilearn.Models.DTOs.CourseDto>

@{
    ViewData["Title"] = "Eğitmen Paneli";
    Layout = "_LayoutInstructor";
    var fullName = ViewBag.FullName as string ?? "Eğitmen";
}

<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

<div class="container my-5">
    <h2 class="text-center my-4 text-danger fw-bold">Kurslarım</h2>

    <table id="instructorCoursesTable" class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Kurs Başlığı</th>
                <th>Açıklama</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Materyal Ekle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@course.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="AddMaterial" asp-route-courseId="@course.Id" class="btn btn-outline-danger btn-sm">
                            <i class="fa fa-file-upload me-1"></i> Materyal Ekle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- DataTables JS -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#instructorCoursesTable').DataTable({
                language: {
                    search: "Ara:",
                    lengthMenu: "Sayfa başına _MENU_ kayıt göster",
                    zeroRecords: "Eşleşen kurs bulunamadı",
                    info: "_TOTAL_ kayıttan _START_ - _END_ arası gösteriliyor",
                    infoEmpty: "Gösterilecek kurs yok",
                    infoFiltered: "(toplam _MAX_ kurstan filtrelendi)",
                    paginate: {
                        next: "Sonraki",
                        previous: "Önceki"
                    }
                },
                lengthMenu: [5, 10, 15, 25, 50],
                pageLength: 10,
                order: [[2, "asc"]] // Başlangıç Tarihine göre sıralama
            });
        });
    </script>
}
